# Xainik Platform Environment Variables
# Copy this file to .env.local and fill in your actual values

# Supabase Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key

# Razorpay Configuration
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret

# Email Configuration
RESEND_API_KEY=your_resend_api_key

# Billing Configuration
ORG_INVOICE_PREFIX=XNK
BILLING_PDF_BUCKET=your_pdf_bucket_name
BILLING_SIGNED_URL_TTL=3600

# Security & Monitoring
CRON_API_KEY=your_cron_api_key
SENTRY_DSN=your_sentry_dsn
SENTRY_ENVIRONMENT=development

# Development Flags
DEV_TEST_ROUTES=false
DEV_UAT=false

# ⚠️ SECURITY WARNING ⚠️
# NEVER commit this file with actual values
# NEVER share your service role keys
# Use environment variables for all sensitive data
